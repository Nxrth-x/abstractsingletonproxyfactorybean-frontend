{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"],
      "@pages/*": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@layouts/*": ["layouts/*"]
    }
  },
  "include": ["./src"]
}
